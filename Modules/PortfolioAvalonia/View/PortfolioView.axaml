<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:view="clr-namespace:PortfolioAvalonia.View"
                     xmlns:viewModel="clr-namespace:PortfolioAvalonia.ViewModel"
                     mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PortfolioAvalonia.View.PortfolioView"
             x:DataType="viewModel:PortfolioViewModel">

  <Border Grid.Row="1">
    <Grid ColumnDefinitions="*,4*">
      <Border Grid.Column="0"
              BorderThickness="1"
              BorderBrush="Gray">
        <Grid RowDefinitions="*,auto">
          <ListBox Grid.Row="0"
                   ItemsSource="{Binding Assets}"
                   SelectedItem="{Binding SelectedAsset}"
                   SelectionMode="Single"
                   Background="White"
                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                   ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListBox.ItemTemplate>
              <DataTemplate x:DataType="viewModel:AssetViewModel">
                <Border Background="Transparent"
                        DoubleTapped="Border_DoubleTapped">
                  <Grid ColumnDefinitions="*,*">
                    <TextBlock Grid.Column="0"
                        Text="{Binding Name}"
                               HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="1"
                               Text="{Binding Status, Converter={StaticResource EnumDescriptionConverter}}"
                               HorizontalAlignment="Right"/>
                  </Grid>
                </Border>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
          <Button Grid.Row="1"
                  Content="Create new"
                  Command="{Binding CreateAssetCommand}"
                  HorizontalContentAlignment="Center"
                  HorizontalAlignment="Stretch"/>
        </Grid>
      </Border>
      <view:AssetView Grid.Column="1"
                      DataContext="{Binding SelectedAsset}"/>
    </Grid>
  </Border>
</UserControl>
